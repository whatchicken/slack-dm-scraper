{
  "manifest_version": 3,
  "name": "Slack DM Scraper",
  "version": "1.0",
  "description": "Scrolls through a Slack DM and extracts messages and meta info.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://app.slack.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.slack.com/*"],
      "js": ["content.js"]
    }
  ]
} 
